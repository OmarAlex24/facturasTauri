{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "facturastauri",
    "version": "0.0.2"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/OmarAlex24/facturasTauri/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5OEM5RUVDNTdEODI3RTgKUldUb0o5aFg3SjZNaVRMaHhyUEJiUVhwenJkVHJiNG1ySVM0aTBoNThYNDJZZXA4VFp5SitucEsK"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "readDir": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "facturastauri",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.omar.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
